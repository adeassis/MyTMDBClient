<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adeilsonassis.mytmdbclient.Fragments.DetalhesMovieFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/detalhe_movie_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/detalhe_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detalhe_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="overview"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detalhe_movie_count_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="count_average" />

            <TextView
                android:id="@+id/detalhe_movie_count_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="count_vote"/>

            <TextView
                android:id="@+id/detalhe_movie_releasedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="release_date" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
